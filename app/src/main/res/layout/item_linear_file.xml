<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <data>
        <variable
            name="item"
            type="com.example.projects.mdir.data.FileItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:background="@android:color/black" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="0.5"
            android:layout_marginStart="@dimen/recycler_item_margin_default"
            android:layout_marginEnd="@dimen/recycler_item_margin_default"
            android:fontFamily="@font/dos_m"
            android:textSize="@dimen/recycler_item_text_size"
            android:singleLine="true"
            android:text="${item.name}"
            tools:textColor="#FFFFFF"
            tools:text="NAME"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_type" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="0.2"
            android:layout_marginEnd="@dimen/recycler_item_margin_default"
            android:textAlignment="viewEnd"
            android:fontFamily="@font/dos_m"
            android:textSize="@dimen/recycler_item_text_size"
            android:singleLine="true"
            tools:textColor="#FFFFFF"
            tools:text="TYPE"
            app:layout_constraintTop_toTopOf="@id/tv_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_name"
            app:layout_constraintStart_toEndOf="@id/tv_name"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="0.2"
            android:layout_marginEnd="@dimen/recycler_item_margin_default"
            android:textAlignment="viewEnd"
            android:fontFamily="@font/dos_m"
            android:textSize="17dp"
            android:singleLine="true"
            android:textColor="#696969"
            tools:textColor="#696969"
            tools:text="SIZE"
            app:layout_constraintTop_toTopOf="@id/tv_time"
            app:layout_constraintBottom_toBottomOf="@id/tv_time"
            app:layout_constraintStart_toEndOf="@id/tv_time"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="0.5"
            android:layout_marginStart="@dimen/recycler_item_margin_default"
            android:layout_marginEnd="@dimen/recycler_item_margin_default"
            android:textAlignment="viewStart"
            android:fontFamily="@font/dos_m"
            android:textSize="17dp"
            android:singleLine="true"
            android:textColor="#696969"
            tools:textColor="#696969"
            tools:text="TIME"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_size" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>