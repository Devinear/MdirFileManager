<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/lay_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_item_height"
        android:background="@color/title_main"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recycler" >

        <Button
            android:id="@+id/bt_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:fontFamily="@font/dos_m"
            android:text="PATH"
            android:textSize="@dimen/recycler_item_text_size"
            android:textColor="@android:color/white" />

<!--        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/recycler_item_margin_default"
            android:fontFamily="@font/dos_m"
            android:text="Path"
            android:textSize="@dimen/recycler_item_text_size"
            android:textColor="@android:color/black"/>-->

        <TextView
            android:id="@+id/tv_path"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/dos_m"
            android:text="Path"
            android:textSize="@dimen/recycler_item_text_size"
            android:textColor="@android:color/black"
            tools:text="C:\"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/lay_top"
        app:layout_constraintBottom_toTopOf="@id/lay_bottom_main"
        tools:listitem="@layout/item_file" />

    <LinearLayout
        android:id="@+id/lay_bottom_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_item_height"
        android:paddingStart="@dimen/layout_padding_default_size"
        android:paddingEnd="@dimen/layout_padding_default_size"
        android:orientation="horizontal"
        android:gravity="center|end"
        android:background="@color/title_main"
        app:layout_constraintTop_toBottomOf="@id/recycler"
        app:layout_constraintBottom_toTopOf="@id/lay_bottom_sub" >

        <TextView
            android:id="@+id/tv_files"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dos_m"
            android:textSize="@dimen/recycler_item_text_size"
            android:textColor="@android:color/white"
            tools:text="10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/title_item_margin"
            android:fontFamily="@font/dos_m"
            android:text=" File"
            android:textSize="@dimen/recycler_item_text_size"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tv_dirs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dos_m"
            android:textSize="@dimen/recycler_item_text_size"
            android:textColor="@android:color/white"
            tools:text="10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/title_item_margin"
            android:fontFamily="@font/dos_m"
            android:text=" Dir"
            android:textSize="@dimen/recycler_item_text_size"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tv_imgs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dos_m"
            android:textSize="@dimen/recycler_item_text_size"
            android:textColor="@android:color/white"
            tools:text="10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dos_m"
            android:text=" IMAGE"
            android:textSize="@dimen/recycler_item_text_size"
            android:textColor="@android:color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_bottom_sub"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_item_height"
        android:orientation="horizontal"
        android:background="@color/title_sub"
        app:layout_constraintTop_toBottomOf="@id/lay_bottom_main"
        app:layout_constraintBottom_toBottomOf="parent" >

        <Button
            android:id="@+id/bt_grid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:fontFamily="@font/dos_m"
            android:text="GRID"
            android:textSize="@dimen/recycler_item_text_size"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/black" />

        <Button
            android:id="@+id/bt_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:fontFamily="@font/dos_m"
            android:text="IMAGE"
            android:textSize="@dimen/recycler_item_text_size"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/black" />

        <Button
            android:id="@+id/bt_zip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:fontFamily="@font/dos_m"
            android:text="ZIP"
            android:textSize="@dimen/recycler_item_text_size"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/black" />

        <Button
            android:id="@+id/bt_doc"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:fontFamily="@font/dos_m"
            android:text="DOC"
            android:textSize="@dimen/recycler_item_text_size"
            android:textColor="@android:color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>