<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SnackBarTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/snack_bar_item_padding</item>
        <item name="android:fontFamily">@font/dos_m</item>
        <item name="android:textSize">@dimen/snack_bar_item_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@null</item>
    </style>

    <style name="HomeLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/home_border</item>
    </style>

    <style name="HomeTitleTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:fontFamily">@font/dos_m</item>
        <item name="android:textSize">@dimen/home_title_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/home_title_text</item>
    </style>

    <style name="HomeCategoryLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="HomeCategoryImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="HomeCategoryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/dos_m</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorHomeText</item>
    </style>

    <style name="BrowserDepthSymbol">
        <item name="android:text">" > "</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/dos_m</item>
    </style>

    <style name="BrowserDepthTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:fontFamily">@font/dos_m</item>
        <item name="android:background">@null</item>
    </style>

    <style name="FindFilterText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:fontFamily">@font/dos_m</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorFilterText</item>
    </style>

    <style name="FindFilterButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:fontFamily">@font/dos_m</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@drawable/btn_find_filter_text_color_selector</item>
        <item name="android:background">@drawable/btn_find_filter_background_selector</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CollapsingToolbar.CollapsedTitleStyle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/dos_m</item>
    </style>

    <style name="CollapsingToolbar.ExpandedTitleStyle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/dos_m</item>
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="BottomSheetTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/dos_m</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

</resources>
